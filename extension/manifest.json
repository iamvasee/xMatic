{
  "manifest_version": 3,
  "name": "xMatic",
  "version": "2.2.1",
  "description": "Unleash AI chaos on X/Twitter - BYOK AI-powered tweet and reply generator",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://api.openai.com/*",
    "https://api.x.ai/*",
    "https://api.perplexity.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "src/scripts/modules/ai-api.js",
        "src/ui/ui-manager.js",
        "src/scripts/modules/storage-manager.js",
        "src/scripts/modules/context-extractor.js",
        "src/scripts/modules/text-insertion-manager.js",
        "src/scripts/floating-panel/ai-tab.js",
        "src/scripts/floating-panel/generate-tab.js",
        "src/scripts/floating-panel/drafts-tab.js",
        "src/scripts/floating-panel/style-tab.js",
        "src/scripts/floating-panel/floating-panel.js",
        "src/scripts/core/content.js"
      ],
      "css": [
        "src/styles/styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_title": "xMatic - AI Twitter Growth Tool",
    "default_icon": {
      "16": "src/assets/xmaticicon.png",
      "32": "src/assets/xmaticicon.png",
      "48": "src/assets/xmaticicon.png",
      "128": "src/assets/xmaticicon.png"
    }
  },
  "icons": {
    "16": "src/assets/xmaticicon.png",
    "32": "src/assets/xmaticicon.png",
    "48": "src/assets/xmaticicon.png",
    "128": "src/assets/xmaticicon.png"
  },
  "background": {
    "service_worker": "src/scripts/core/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/robot.svg", 
        "src/assets/time.svg", 
        "src/assets/float.svg",
        "src/assets/xMatic.png",
        "src/styles/floating-panel.css",
        "src/styles/tabs.css",
        "src/scripts/floating-panel/*.js"
      ],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}