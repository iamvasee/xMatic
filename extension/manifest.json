{
  "manifest_version": 3,
  "name": "xMatic",
  "version": "1.3.2",
  "description": "Unleash AI chaos on X/Twitter - BYOK viral reply generator",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://api.openai.com/*",
    "https://api.x.ai/*",
    "https://api.perplexity.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "src/scripts/ai-api.js",
        "src/scripts/ui-manager.js",
        "src/scripts/storage-manager.js",
        "src/scripts/context-extractor.js",
        "src/scripts/text-insertion-manager.js",
        "src/scripts/content.js"
      ],
      "css": [
        "src/styles/styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_title": "xMatic - AI Twitter Growth Tool",
    "default_icon": {
      "16": "src/assets/xmaticicon.png",
      "32": "src/assets/xmaticicon.png",
      "48": "src/assets/xmaticicon.png",
      "128": "src/assets/xmaticicon.png"
    }
  },
  "icons": {
    "16": "src/assets/xmaticicon.png",
    "32": "src/assets/xmaticicon.png",
    "48": "src/assets/xmaticicon.png",
    "128": "src/assets/xmaticicon.png"
  },
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/assets/robot.svg", "src/assets/time.svg", "src/assets/float.svg"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}